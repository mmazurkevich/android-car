<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.infinity.bluetooth.bluetooth.views.fragments.ControlFragment"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.75">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_up_arrow"
            android:id="@+id/up_arrow_button"
            app:backgroundTint="@android:color/holo_blue_bright"
            android:layout_gravity="center"
            android:layout_marginTop="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_left_arrow"
                android:id="@+id/left_arrow_button"
                app:backgroundTint="@android:color/holo_blue_bright"
                android:layout_margin="10dp"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_down_arrow"
                android:id="@+id/down_arrow_button"
                app:backgroundTint="@color/colorAccent"
                android:layout_margin="10dp"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_right_arrow"
                android:id="@+id/right_arrow_button"
                app:backgroundTint="@android:color/holo_blue_bright"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:text="@string/speed_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingStart="50dp"
        android:textSize="20sp"/>

    <SeekBar
        android:id="@+id/speed_seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:max="250"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speed_progress"
        android:layout_gravity="center"/>

    <TextView
        android:text="@string/delay_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingStart="50dp"
        android:textSize="20sp"/>

    <SeekBar
        android:id="@+id/delay_seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:max="1000"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delay_progress"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/save_configuration"
        android:text="@string/save_configuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_gravity="end" />

</LinearLayout>